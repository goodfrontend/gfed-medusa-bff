{
  "name": "@gfed-medusa-bff/orders",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "pnpm run codegen && tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "generate-schema": "dotenv -e .env.publish -- sh -c 'rover subgraph introspect \"${SUBGRAPH_URL}\" > schema.graphql'",
    "publish-schema": "dotenv -e .env.publish -- sh -c 'rover subgraph publish \"$APOLLO_GRAPH_REF\" --name \"$APOLLO_SUBGRAPH_NAME\" --schema schema.graphql --routing-url \"$APOLLO_GRAPH_ROUTING_URL\"'",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@apollo/subgraph": "^2.12.1",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@graphql-tools/merge": "^9.1.1",
    "@medusajs/js-sdk": "^2.10.3",
    "@medusajs/types": "^2.10.3",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "glob": "^11.0.3",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@gfed-medusa-bff/eslint-config": "workspace:*",
    "@gfed-medusa-bff/jest-config": "workspace:*",
    "@gfed-medusa-bff/prettier-config": "workspace:*",
    "@gfed-medusa-bff/typescript-config": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=18"
  }
}
